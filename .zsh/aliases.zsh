# Turns vi into vim
alias vi="vim"

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias .......='cd ../../../../../..'

# Be polite pls
alias please="sudo"

# Get week number
alias week='date +%V'

# Lite Vim
alias vimlite='VIM_MODE=lite vim'
